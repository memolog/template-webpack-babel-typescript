{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["../../node_modules/@types"],
    "types": ["node", "jest"],
    "lib": ["es2018"],
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "../../public/node/js",
    "rootDir": "."
  },
  "include": ["./**/*"],
  "exclude": ["__tests__", "node_modules"]
}
